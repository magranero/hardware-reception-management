# Archivo de configuración para entorno de producción

# API Keys
VITE_MISTRAL_API_KEY=your_production_mistral_api_key

# Contact Information
VITE_CONTACT_EMAIL=info@datacenter-manager.com

# Database Configuration (PostgreSQL)
VITE_DB_HOST=your_production_pg_host
VITE_DB_NAME=your_production_pg_database
VITE_DB_USER=your_production_pg_username
VITE_DB_PASSWORD=your_production_pg_password
VITE_DB_PORT=5432
VITE_DB_SSL=true

# App Configuration
VITE_SKIP_USER_LOGIN=false

# Backend API URL
VITE_API_URL=/api

# Debug and Demo modes
VITE_DEBUG_MODE=false
VITE_DEMO_MODE=false

# Server configuration for PM2
PORT=3002
IP_ADDRESS=127.0.0.1
NODE_ENV=production

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# JWT Configuration (JSON Web Token)
JWT_SECRET=change_this_to_a_secure_random_string_in_production
JWT_EXPIRES_IN=24h

# CORS Configuration
CORS_ORIGIN=https://datacenter-manager.com,https://www.datacenter-manager.com